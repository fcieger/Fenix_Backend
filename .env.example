# AMBIENTE DE DESENVOLVIMENTO - BANCO LOCAL
NODE_ENV=development
PORT=3001

# Configuração do Banco de Dados Local (PostgreSQL via Docker)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here
DB_DATABASE=fenix

# Configurações de Criptografia
ENCRYPTION_KEY=your_encryption_key_here

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Configurações CORS
CORS_ORIGIN=http://localhost:3004,https://fenixfrontendatual.vercel.app

# OpenAI API (opcional - para funcionalidades de IA)
OPENAI_API_KEY=your_openai_api_key_here

# Para produção, comente as linhas acima e use DATABASE_URL do Neon
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
